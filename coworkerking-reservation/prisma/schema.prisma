generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  firstname String?
  lastname  String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  reservations Reservation[]
}

model Space {
  id           String   @id @default(cuid())
  name         String
  description  String
  type         SpaceType
  capacity     Int
  pricePerHour Int
  thumbnail    String
  photos       String[]
  equipments   String[]
  createdAt    DateTime @default(now())

  reservations Reservation[]
}

model Reservation {
  id        String   @id @default(cuid())
  userId    String
  spaceId   String
  start     DateTime
  end       DateTime
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  space Space @relation(fields: [spaceId], references: [id])
}

enum SpaceType {
  desk
  meeting_room
  private_office
}

enum Role {
  USER
  ADMIN
}